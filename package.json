{
    "name": "Foggy",
    "version": "1.0.0",
    "description": "Foggy - the less-is-more tray weather app!",
    "main": "main.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start": "electron .",
        "pack": "build --dir",
        "dist": "build"
    },
    "build": {
        "appId": "com.nickjokic.foggy",
        "mac": {
            "category": "public.app-category.weather",
            "type": "distribution",
            "icon": "build/icons.icns"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        }
    },
    "repository": "https://github.com/NickJokic/foggy",
    "keywords": [
        "Electron",
        "Foggy",
        "weather",
        "application",
        "tray"
    ],
    "author": "Nick Jokic <info@nickjokic.com>",
    "license": "MIT",
    "devDependencies": {
        "electron": "^1.8.8",
        "electron-builder": "^19.56.2"
    },
    "dependencies": {
        "bootstrap": "^3.4.1",
        "jquery": "^3.3.1",
        "npm": "^6.9.0",
        "toastr": "^2.1.4"
    }
}
